                        <p>Nenhum jogador no ranking ainda. Seja o primeiro!</p>
                        <div class="mt-3">
                            <% if (!usuario) { %>
                                <a href="/registro" class="btn btn-success">Criar Conta</a>
                            <% } %>
                            <a href="/quizzes" class="btn btn-primary">Jogar Quiz</a>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

