<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title text-center">üìù Registrar</h2>
                
                <!-- ‚¨áÔ∏è‚¨áÔ∏è‚¨áÔ∏è ADICIONAR AQUI: action, method, onsubmit ‚¨áÔ∏è‚¨áÔ∏è‚¨áÔ∏è -->
                <form action="/registro" method="POST" onsubmit="return validarRegistro()">
                    <div class="mb-3">
                        <label for="nome" class="form-label">Nome completo</label>
                        <!-- ‚¨áÔ∏è ADICIONAR: name="nome" e id="nome" -->
                        <input type="text" class="form-control" name="nome" id="nome" required 
                               placeholder="Digite seu nome completo">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <!-- ‚¨áÔ∏è ADICIONAR: name="email" e id="email" -->
                        <input type="email" class="form-control" name="email" id="email" required
                               placeholder="exemplo@email.com">
                    </div>
                    <div class="mb-3">
                        <label for="senha" class="form-label">Senha</label>
                        <!-- ‚¨áÔ∏è ADICIONAR: name="senha" e id="senha" -->
                        <input type="password" class="form-control" name="senha" id="senha" required
                               placeholder="M√≠nimo 6 caracteres">
                    </div>
                    
                    <!-- ‚¨áÔ∏è‚¨áÔ∏è‚¨áÔ∏è ADICIONAR AQUI: Mensagem de erro/sucesso ‚¨áÔ∏è‚¨áÔ∏è‚¨áÔ∏è -->
                    <% if (typeof erro !== 'undefined') { %>
                        <div class="alert alert-danger mt-3">
                            <strong>Erro:</strong> <%= erro %>
                        </div>
                    <% } %>
                    
                    <% if (typeof sucesso !== 'undefined') { %>
                        <div class="alert alert-success mt-3">
                            <strong>Sucesso!</strong> <%= sucesso %>
                        </div>
                    <% } %>
                    
                    <button type="submit" class="btn btn-success w-100">Criar Conta</button>
                </form>
                
                <p class="text-center mt-3">
                    J√° tem conta? <a href="/login">Fa√ßa login aqui</a>
                </p>
            </div>
        </div>
    </div>
</div>

<!-- ‚¨áÔ∏è‚¨áÔ∏è‚¨áÔ∏è ADICIONAR AQUI NO FINAL: Script de valida√ß√£o JavaScript ‚¨áÔ∏è‚¨áÔ∏è‚¨áÔ∏è -->
<script>
function validarRegistro() {
    const nome = document.getElementById('nome').value.trim();
    const email = document.getElementById('email').value.trim();
    const senha = document.getElementById('senha').value;
    
    // Valida√ß√£o b√°sica - campos vazios
    if (!nome || !email || !senha) {
        alert('‚ùå Por favor, preencha todos os campos!');
        return false;
    }
    
    // Valida√ß√£o de nome (m√≠nimo 3 caracteres)
    if (nome.length < 3) {
        alert('‚ùå O nome deve ter pelo menos 3 caracteres!');
        return false;
    }
    
    // Valida√ß√£o de email
    const regexEmail = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!regexEmail.test(email)) {
        alert('‚ùå Por favor, insira um email v√°lido! (exemplo@email.com)');
        return false;
    }
    
    // Valida√ß√£o de senha
    if (senha.length < 6) {
        alert('‚ùå A senha deve ter no m√≠nimo 6 caracteres!');
        return false;
    }
    
    // Senha muito comum (opcional)
    const senhasFracas = ['123456', 'senha', 'password', '12345678', 'qwerty'];
    if (senhasFracas.includes(senha.toLowerCase())) {
        if (!confirm('‚ö†Ô∏è Esta senha √© muito comum. Deseja continuar mesmo assim?')) {
            return false;
        }
    }
    return true; // Formul√°rio pode ser enviado
}
</script>