<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title text-center">üîê Login</h2>
                
                <!-- ‚¨áÔ∏è‚¨áÔ∏è‚¨áÔ∏è ADICIONAR AQUI: action, method, onsubmit e name nos inputs ‚¨áÔ∏è‚¨áÔ∏è‚¨áÔ∏è -->
                <form action="/login" method="POST" onsubmit="return validarLogin()">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <!-- ‚¨áÔ∏è ADICIONAR: name="email" e id="email" -->
                        <input type="email" class="form-control" name="email" id="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="senha" class="form-label">Senha</label>
                        <!-- ‚¨áÔ∏è ADICIONAR: name="senha" e id="senha" -->
                        <input type="password" class="form-control" name="senha" id="senha" required>
                    </div>
                    
                    <!-- ‚¨áÔ∏è‚¨áÔ∏è‚¨áÔ∏è ADICIONAR AQUI: Mensagem de erro (se existir) ‚¨áÔ∏è‚¨áÔ∏è‚¨áÔ∏è -->
                    <% if (typeof erro !== 'undefined') { %>
                        <div class="alert alert-danger mt-3">
                            <strong>Erro:</strong> <%= erro %>
                        </div>
                    <% } %>
                    
                    <button type="submit" class="btn btn-success w-100">Entrar</button>
                </form>
                
                <p class="text-center mt-3">
                    N√£o tem conta? <a href="/registro">Registre-se aqui</a>
                </p>
            </div>
        </div>
    </div>
</div>

<!-- ‚¨áÔ∏è‚¨áÔ∏è‚¨áÔ∏è ADICIONAR AQUI NO FINAL: Script de valida√ß√£o JavaScript ‚¨áÔ∏è‚¨áÔ∏è‚¨áÔ∏è -->
<script>
function validarLogin() {
    const email = document.getElementById('email').value;
    const senha = document.getElementById('senha').value;
    
    // Valida√ß√£o b√°sica
    if (!email || !senha) {
        alert('‚ùå Por favor, preencha todos os campos!');
        return false;
    }
    
    // Valida√ß√£o de email simples
    if (!email.includes('@') || !email.includes('.')) {
        alert('‚ùå Por favor, insira um email v√°lido!');
        return false;
    }
    
    // Valida√ß√£o de senha (m√≠nimo 6 caracteres)
    if (senha.length < 6) {
        alert('‚ùå A senha deve ter no m√≠nimo 6 caracteres!');
        return false;
    }
    
    return true; // Formul√°rio pode ser enviado
}
</script>